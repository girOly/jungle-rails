<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product</th>
          <th>Description</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
          <%= render 'orderItem', product_id: line_item.product_id, quantity: line_item.quantity %>
        <% end %>
        <tr>
          <td>Order Total :<%= humanized_money_with_symbol @order.total_cents / 100 %></td>
        </tr>
        <tr>
          <td>Client Email:   <%= @order.email %></td>
        </tr>
      </tbody>
      <tfoot>
      </tfoot>
    </table>
  </div>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
